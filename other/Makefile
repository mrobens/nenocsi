CC     = g++
OPT    = -O2
OTHER  = -Wall -Wno-deprecated
CFLAGS = $(OPT) $(OTHER)

all: noxim_explorer

noxim_explorer: noxim_explorer.o
	$(CC) $(CFLAGS) noxim_explorer.o -o noxim_explorer

noxim_explorer.o: noxim_explorer.cpp
	$(CC) $(CFLAGS) -c noxim_explorer.cpp -o noxim_explorer.o

clean:
	@rm noxim_explorer.o
